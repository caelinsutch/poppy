  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@biomejs/biome": "^2.2.3"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "typescript": "5.9.2",
      "zod": "4.1.5",
      "tsx": "4.20.5",
      "ai": "6.0.0-beta.98",
