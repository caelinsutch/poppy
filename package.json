{
  "name": "poppy",
  "private": true,
  "scripts": {
    "tunnel": "ngrok http --url=pyramidical-ethelene-cognoscitive.ngrok-free.app 3000",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "typecheck": "turbo run typecheck",
    "server:build": "turbo run build --filter=@poppy/server...",
    "server:start": "turbo run start --filter=@poppy/server"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@biomejs/biome": "^2.2.3"
  }
}
