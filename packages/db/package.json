{
  "name": "@poppy/db",
  "version": "0.0.1",
  "private": true,
  "exports": {
    ".": {
      "default": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./*": "./src/*"
  },
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/seed.ts",
    "db:reset": "supabase db reset"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "drizzle-orm": "catalog:",
    "postgres": "^3.4.7",
    "@poppy/schemas": "workspace:*"
  },
  "devDependencies": {
    "@poppy/typescript-config": "workspace:*",
    "drizzle-kit": "^0.31.4",
    "tsx": "catalog:"
  }
}
